{
  "extends": "expo/tsconfig.base",
  "include": [
    "src/**/*",
    "app/**/*"
  ],
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@apis/*": [
        "src/apis/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@context/*": [
        "src/context/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@navigation/*": [
        "src/navigation/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@typings/*": [
        "src/typings/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
    }
  }
}